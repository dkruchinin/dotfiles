[defaults]
#log = -v
tip = -v

[extensions]
hgext.bookmarks =
color =
pager =
mq =
patchbomb =
rebase =
graphlog =
parentrevspec =
reviewboard = /Users/dk/work/tegile/hgreviewboard

[reviewboard]
server = http://reviews.eng-us.tegile.com/

[ui]
editor = vim
username = Dan Kruchinin <dkruchinin@acm.org>

[pager]
pager = less
quiet = True
attend = diff,status,log,qdiff,blame,annotate

[color]
mode = auto
diff.diffline = bold
diff.extended = cyan bold
diff.file_a = red bold
diff.file_b = green bold
diff.hunk = magenta
diff.deleted = red
diff.inserted = green
diff.changed = white
diff.trailingwhitespace = bold red_background

[alias]
slog = log --stat -l 5
sendpatch = email --date `date "+%D"` -g -d

[diff]
showfunc = True
git = True
